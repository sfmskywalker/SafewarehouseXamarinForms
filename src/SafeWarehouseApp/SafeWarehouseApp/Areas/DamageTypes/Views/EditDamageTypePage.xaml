<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeWarehouseApp.Areas.DamageTypes.Views.EditDamageTypePage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Naam" FontSize="Medium" />
            <Entry Text="{Binding DisplayName, Mode=TwoWay}" FontSize="Medium" ReturnCommand="{Binding SaveCommand}"/>
                <StackLayout Orientation="Horizontal">
                <Button Text="Annuleren" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Opslaan" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>