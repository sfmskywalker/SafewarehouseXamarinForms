<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeWarehouseApp.Areas.DamageTypes.Views.NewDamageTypePage"
             Shell.PresentationMode="Animated"
             Title="Nieuw Type Schade"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Naam type schade" FontSize="Medium" />
            <Entry Text="{Binding DamageTypeTitle, Mode=TwoWay}" FontSize="Medium" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                <Button Text="Annuleren" Command="{Binding CancelCommand}" HorizontalOptions="Fill"></Button>
                <Button Text="Opslaan" Command="{Binding SaveCommand}" HorizontalOptions="Fill"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
