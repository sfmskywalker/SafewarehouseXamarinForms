<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeWarehouseApp.Areas.Materials.Views.EditMaterialPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout Spacing="15" Padding="15">
            <StackLayout>
                <Label Text="Naam materiaal" FontSize="Medium" />
                <Entry Text="{Binding Name, Mode=TwoWay}" FontSize="Medium" ReturnCommand="{Binding SaveCommand}" />
            </StackLayout>

            <StackLayout>
                <Label Text="Leverancier" FontSize="Medium" />
                <Picker x:Name="SupplierPicker"
                        Title="Selecteer een leverancier"
                        ItemsSource="{Binding Suppliers}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedSupplier}" />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Button Text="Opslaan" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>